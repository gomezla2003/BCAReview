  var bodyContent = "<table style=\"WIDTH: 100%;border:1px solid "+thef.BORDER_COLOR+";padding:4px;\"><tbody>";
//bodyContent += bcaSplit[i]; 
for(i=0;i<bcaSplit.length; i++){
var gr = new GlideRecord('cmdb_ci_computer');
gr.addQuery('sys_id',bcaSplit[i]);
gr.query();
while(gr.next()){
var url = "csm?id=bca_review&bca=" + gr.sys_id;
bodyContent += "<tr><td valign=\"top\" width=\"125\"><strong>Workstation:</strong></td><td valign=\"top\">" + gr.name + "</td><td valign=\"top\">" + gr.location.getDisplayValue() + "</td><td valign=\"top\"><a href='"+url+"'>link</a></td></tr>";
}}
 
  bodyContent += "</tbody></table>";

  bodyContent += "<p>Please review each workstation listed above by clicking on the associated 'link' and fill out the checklist </p>";


  var sDescription;



  var sLatestComments = thef.formatArray(current.comments_and_work_notes.getJournalEntry(1));



  var aBodyParms = {'BODY_CONTENT' : bodyContent};
  sHTML += thef.getSection('body', aBodyParms);
  sHTML += thef.getSection('footer');
  email.setBody(sHTML);
  email.setSubject(sSubject);
</mail_script>]]></message>
        <message_html><![CDATA[<p><img title="HonorHealth" src="hh_logo.pngx" alt="HonorHealth" width="200" height="50" align="left" border="" hspace="5" vspace="" /></p>
<p>&nbsp;</p>
<p><span style="font-family: arial, helvetica, sans-serif; font-size: 12pt;"><strong>Downtime Computer(s) in need of review for Business Continuity Access (BCA)</strong></span></p>
<hr style="height: 3px; border: none; background-color: #72246c;" />
<div style="background-color: #fcf4ff; border: 0.5px solid #72246c;">
<p>${mail_script:BCA business owner sign-off_script_1}</p>
</div>
<p style="margin: 0in; line-height: normal; font-size: 11pt; font-family: Calibri, sans-serif;">&nbsp;</p>
<p style="margin: 0in; line-height: normal; font-size: 11pt; font-family: Calibri, sans-serif;"><span style="font-size: 12pt; color: black;">You are identified as the Business Owner for the downtime computer(s) listed above. </span></p>
<p style="margin: 0in; line-height: normal; font-size: 11pt; font-family: Calibri, sans-serif;"><span style="font-size: 12pt;">Business Owners are required to complete the linked check list to validate each downtime computer prior to an Epic (Connect) Upgrade.</span></p>
<p style="margin: 0in; line-height: normal; font-size: 11pt; font-family: Calibri, sans-serif;"><span style="font-size: 12pt;">Your Downtime Computer(s) can be identified by the red keyboard and the yellow BCA label on the monitor. </span></p>
<p style="margin: 0in; line-height: normal; font-size: 11pt; font-family: Calibri, sans-serif;"><span style="font-size: 12pt; color: black;">Validated Downtime Computer(s) contain reports to ensure continuity of patient care in the event of a downtime. </span></p>
<p style="margin: 0in; line-height: normal; font-size: 11pt; font-family: Calibri, sans-serif;"><span style="font-size: 12pt;"><span style="line-height: 107%; font-family: Calibri, sans-serif; color: black;">Downtime Computer(s) must be validated three days prior to the scheduled downtime. DATE: ${mail_script:BCA business owner sign-off_script_4}</span></span></p>
<p style="margin: 0in; line-height: normal; font-size: 11pt; font-family: Calibri, sans-serif;">&nbsp;</p>
<hr style="height: 2px; border: none; background-color: #72246c;" />
<p>&nbsp;</p>
<p style="margin: 0in; line-height: normal; font-size: 11pt; font-family: Calibri, sans-serif;"><span style="font-size: 12.0pt; color: #979797;">Want to learn more about Downtime Computer(s)? Click on the link below to watch the BCA PC eLearning. </span></p>
